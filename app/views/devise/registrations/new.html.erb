<% content_for :title do %>
Registro
<% end %>
<div id="container">
	<div id="headline">
		<h3>Registrate con nosotros</h3>
	</div>
	<div id="info">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>
			
			<%= f.label :avatar, 'Imagen de Perfil' %>
			<%= f.file_field :avatar %>
			<%= f.label :first_name, 'Nombres' %>
			<%= f.text_field :first_name %>
			<%= f.label :last_name, 'Apellidos' %>
			<%= f.text_field :last_name %>
			<%= f.label :id_number, 'RUT' %>
			<%= f.text_field :id_number %>
			<%= f.label :id_document_serial, 'Numero de cedula' %>
			<%= f.text_field :id_document_serial %>
			<%= f.label :email, 'E-mail' %>
			<%= f.email_field :email, autofocus: true %>
			<%= f.label :password, 'Contraseña' %>
			<%= f.password_field :password, autocomplete: "off" %>
			<%= f.label :password_confirmation, 'Confirmar contraseña' %>
			<%= f.password_field :password_confirmation, autocomplete: "off" %>



		<%= f.submit "Registrarme", {id: 'submit'} %>
		<% end %>

		<%= render "devise/shared/links" %>
		<p class="datosextra"></p>
	</div>
</div>
<%= render "layouts/footer" %>